<h1 class="title">Explore Destinations</h1>

<!-- Search bar -->
<form action="/search" method="GET">
    <div class="field has-addons">
        <div class="control">
            <input class="input" type="text" name="query" placeholder="Search destinations">
        </div>
        <div class="control">
            <button type="submit" class="button is-primary">Search</button>
        </div>
    </div>
</form>

<div class="columns is-multiline">
    {{#each destinations}}
    <div class="column is-full-mobile is-one-quarter-tablet is-one-fifth-desktop">
        <div class="card">
            <div class="card-content">
                <p class="title">{{city}}, {{country}}</p>
                <p class="subtitle">{{description}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
