{{!-- This page will display the list of destinations. --}}
{{#extend 'layouts/main'}}

{{#content 'title'}}Home{{/content}}

<section class="section">
    <div class="container">
        <h1 class="title">Explore Destinations</h1>
        <div class="columns is-multiline">
            {{#each destinations}}
            <div class="column is-one-quarter">
                <div class="card">
                    <div class="card-content">
                        <p class="title">{{city}}, {{country}}</p>
                        <p class="subtitle">{{description}}</p>
                        <p class="subtitle">Posted by: {{user.name}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

{{/extend}}
