<h1 class="title">Explore Blogs</h1>

<!-- Search bar -->
<form action="/search" method="GET">
    <div class="field has-addons">
        <div class="control">
            <input class="input" type="text" name="query" placeholder="Search blogs" required>
        </div>
        <div class="control">
            <button type="submit" class="button is-primary">Search</button>
        </div>
    </div>
</form>

<!-- Display blogs -->
<div class="columns is-multiline">
    {{#each blogs}}
    <div class="column is-full-mobile is-one-quarter-tablet is-one-fifth-desktop">
        <div class="card">
            <div class="card-content">
                <p class="title">{{title}}</p>
                <p class="subtitle">{{destination.city}}, {{destination.country}}</p>
                <p class="content">{{post}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
